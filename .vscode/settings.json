{
  // Format on Save aktivieren
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  
  // Prettier als Standard-Formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  
  // TypeScript/JavaScript spezifische Einstellungen
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  
  // ESLint Einstellungen
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": ["."],
  
  // React Native spezifische Einstellungen
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  
  // Auto Save
  "files.autoSave": "onFocusChange",
  
  // Emmet für React
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  
  // Search excludes für bessere Performance
  "search.exclude": {
    "**/node_modules": true,
    "**/ios": true,
    "**/android": true,
    "**/.git": true,
    "**/coverage": true,
    "**/build": true,
    "**/dist": true
  },
  
  // Files excludes
  "files.exclude": {
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/coverage": true
  }
}